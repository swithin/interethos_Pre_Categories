<% @title = 'Issues & Passions' %>

<table>
<% @passions.group_by(&:issue).sort.each do |issue, @passions| %>
  <tr>
    <td><strong><%= link_to issue.question_or_uri, edit_issue_path(issue) %><% @issue_id = issue.id %></strong></td>
  </tr>
  <tr>
    <td>
        <ul><table cellpadding="0" cellspacing="0" border="0">
            <%= render :partial => 'passion', :collection => @passions %>
        </table></ul>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a new Issue', new_issue_path %><br />
<%= link_to 'Add a new Passion to an existing Issue', new_passion_path %>
