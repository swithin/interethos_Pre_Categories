<% @title = 'Editing Happening' %>

<% form_for(@happening) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%# <p> %>
    <%# <%= f.label :group %>
    <%# <%= collection_select(:happening, :group_id, Group.find(:all), :id, :name, options = {}, html_options = {}) %>
  <%# </p> %>
  <p>
    <%= f.label :realm %><br />
    <%= tree_select(Realm.find(:all, :conditions => "parent_id = 1"),
                        'happening', 'realm_id', @happening.realm) %>
  </p>
  <p>
    <%= f.label :date_and_time %><br />
    <%= f.datetime_select :date_and_time, { :include_seconds => false } %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_area :location, :cols => 50, :rows => 3 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 50, :rows => 3 %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= javascript_tag "$('happening_name').focus()" %>
<%= link_to 'Show', @happening %> | 
