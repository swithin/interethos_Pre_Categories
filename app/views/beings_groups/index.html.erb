<% @title = 'Beings & ...' %>

<table>
<% @beings_groups.group_by(&:being).sort.each do |being, @groups| %>
  <tr>
    <td><strong><%= link_to being.name, being %><% @being_id = being.id %></strong></td>
  </tr>
  <tr>
    <td>
        <ul><table cellpadding="0" cellspacing="0" border="0" width="300">
            <%= render :partial => 'group', :collection => @groups %>
        </table></ul>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a new Being', new_being_path %><br />
<%= link_to 'Add an existing Being to an existing Group', new_beings_group_path %>
